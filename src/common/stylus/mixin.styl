//css函数

bg-image($name,$x,$y)
  background-image: url($name + ".png")
  background-size: $x $y

//最多显示一行
no-wrap1()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

//最多显示两行
 no-wrap2()
  text-overflow: ellipsis
  overflow: hidden
  display:-webkit-box
  -webkit-box-orient:vertical
  -webkit-line-clamp:2

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px